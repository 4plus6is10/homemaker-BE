<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        

<mapper namespace="com.plus6is10.homemaker.repository.BasketRepository">

        <insert id="insertBasket" parameterType="BasketDTO" useGeneratedKeys="true" keyProperty="seq">
                INSERT INTO basket (asin, name, category, price, amount) VALUES (#{asin}, #{name}, #{category}, #{price}, #{amount})
        </insert>

        <select id="getAllBaskets" resultType="BasketDTO">
		SELECT * FROM basket
	</select>

        <delete id="deleteBasket">
	
		delete from basket where asin = #{asin}
	
	</delete>
</mapper>